
MDScreen:
    MDGridLayout:
        cols: 1
        MDGridLayout:
            cols : 1
            size_hint_y : 0.4
            padding : [40,20,40,20]
            MDGridLayout:
                cols: 2
                padding : [20,20,20,20]
                MDLabel:
                    size_hint_x: 0.4
                    text: "USERNAME"
                    halign: "left"
                MDTextField:
                    id : username
                    hint_text: "username"
                    mode: "rectangle"
            MDGridLayout:
                cols : 2
                padding : [20,20,20,20]
                MDLabel:
                    size_hint_x: 0.4
                    text: "PASSWORD"
                    halign: "left"
                MDTextField:
                    id :  password
                    hint_text: "password"
                    mode: "rectangle"
        MDGridLayout:
            cols : 2
            padding : [40,20,40,20]
            MDRectangleFlatButton:
                MDTextButton:
                    text : "Add"
                    on_release: app.add()
            MDRectangleFlatButton:
                MDTextButton:
                    text : "Get"
                    on_release: app.get()
            MDRectangleFlatButton:
                MDTextButton:
                    text : "List"
                    on_release: app.getlist()
            MDRectangleFlatButton:
                MDTextButton:
                    text : "Delete"
                    on_release: app.delete()
